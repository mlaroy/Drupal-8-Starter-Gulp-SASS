# V1.1

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.js]
indent_style = space
indent_size = 2

[**.{jade,pug}]
indent_style = space
indent_size = 2

[**.{css,scss,sass}]
indent_style = space
indent_size = 2

[**.php]
indent_style = tab
indent_size = 2

[**.html]
indent_style = space
indent_size = 2